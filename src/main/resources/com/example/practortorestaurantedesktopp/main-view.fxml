    <tabs>
        <Tab text="Mesa 1">
            <content>
                <VBox spacing="10" alignment="CENTER">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>

                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                        <VBox fx:id="pedidoContainer1"
                              style="-fx-border-width: 1px; -fx-border-color: gray;">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                        </VBox>
                    </ScrollPane>

                    <!-- Botones de Pedido -->
                    <HBox alignment="CENTER" spacing="10">
                        <Button fx:id="cancelarPedidoBtn1"
                                text="Cancelar Pedido"
                                visible="false"
                                managed="true"
                                onAction="#cancelarPedidoAmesa"
                        />
                        <Button fx:id="enviarPedidoBtn1"
                                text="Enviar Pedido"
                                visible="false"
                                managed="true"
                                onAction="#admitirPedidoAmesa"
                        />
                    </HBox>

                    <!-- Contenedor de Chat -->
                    <VBox fx:id="chatContainer1" VBox.vgrow="ALWAYS"
                          style="-fx-border-width: 1px; -fx-border-color: gray;">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>

                        <VBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
                            <ScrollPane fx:id="messagesScroll1" fitToWidth="true"
                                        VBox.vgrow="ALWAYS"
                                        style="-fx-background-color: transparent;">
                                <TextFlow fx:id="messagesArea1"
                                          style="-fx-padding: 5px;"/>
                            </ScrollPane>
                            <TextField fx:id="inputField1" HBox.hgrow="ALWAYS" promptText="Introduzca mensaje..."/>
                            <Button fx:id="sendButton1" text="Send"/>
                        </VBox>
                    </VBox>

                    <!-- Hard reset de mesa -->
                    <VBox>
                        <Button fx:id="hardReset1" text="Resetear Mesa 1"/>
                    </VBox>
                </VBox>

            </content>
        </Tab>

